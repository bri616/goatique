<!DOCTYPE html>
<html>
<head>
  <title>Goatique</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <link href='http://fonts.googleapis.com/css?family=Merriweather+Sans:400,800' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">

    <div class="login-box">
      <% if @current_user %>
      <div class="logged-in">Logged in as <%= link_to(@current_user.user_name, merchant_show_path(@current_user.id)) %>
        <%= link_to "Sign Out", log_out_path %>
      </div>
      <% else %>
      <div class="login-form">
        <form action="/home/login" method="POST">
          Username:<input type="text" name="pringle[pizza_name]"/>
          Password:<input type="password" name="pringle[pizza_pass]"/>
          <button>SUBMIT</button>
        </form>
      </div>
      <% end %>
    </div>

    <div class="cart-status">
      Your Cart has <%= @current_order ? @current_order.total_number_of_products : "0" %> items.
      ... and it is order # <%= @current_order ? @current_order.id : "nil" %>
    </div>

    <span class="brand"><a href="/"><h1><strong>Goat</strong>ique</h1></a></span>
    <div class="nav">
      <ul class="horizontal-list">
        <li><a href="/merchants/">Merchants</a></li>
        <li><a href="/categories/">Categories</a></li>
        <li><a href="/products/index">Products</a></li>
        <li><a href="/merchants/new">Register</a></li>
        <!-- <li><a href="/home/login">Login</a></li> -->
      </ul>
    </div>
  </div>

<div class="content-container">
  <%= yield %>
</div>

</body>
</html>
