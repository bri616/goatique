<div class="product-container">
  <div class="product-name">
    <a href="/products/<%= product.id %>/about"><%= product.name %></a>
  </div>

  <div class="product-image">

  </div>

  <div class="product-merchant">
    Sold by:
    <span class="merchant-shop-link">
      <a href="/merchants/<%= product.merchant.id %>"><%= product.merchant.shop_name %></a>
    </span>
  </div>

  <div class="product-description">
    <%= product.description %>
  </div>

  <div class="product-price">
    Price: <%= product.price %>
  </div>

  Tags: <% product.categories.each do |category| %>
          <%= category.name %>
        <% end %>

  <div class="add-to-cart">
    <%= button_to "Add to Cart", order_items_path(product), :class => "button" %>
  </div>
</div>
