<html>
<head>
</head>

<body>
  <% if @merchant == @current_user %>
    <a href="/products/new" >Create a new product</a>
    <a href="/merchants/<%= @merchant.id %>/edit">Edit profile</a>
  <% end %>

  <h2>Merchant user name: <%= @merchant.user_name %></h2>
  <h2>Merchant shop name: <%= @merchant.shop_name %></h2>
  <blockquote><%= @merchant.description %> </blockquote>
    <% @merchant.products.each do |product| %>
      <%= render "shared/display_product", product: product %>
    <% end %>
</body>
</html>
